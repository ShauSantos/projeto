    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
nome.add(jTextField1.getText());
cpf.add(jFormattedTextField1.getText());
email.add(jTextField3.getText());
tel.add(jFormattedTextField3.getText());
data.add(jFormattedTextField2.getText());
this.setVisible(false);
    }                                        

    static ArrayList getNomes(){
        return nome;
    }
    
    
    static String getNome(int i){
        return nome.get(i);
    }
    
    static String getCPF(int i){
        return cpf.get(i);
    }
    
    static String getEMail(int i){
        return email.get(i);
    }
    
    static String getTel(int i){
        return tel.get(i);
    }
    
    static String getData(int i){
        return data.get(i);
    }
    
    static void setNome(int i,String e){
        nome.set(i, e);
    }
    static void setCPF(int i,String e){
        cpf.set(i, e);
    }
    static void setData(int i,String e){
        data.set(i, e);
    }
    static void setEmail(int i,String e){
        email.set(i, e);
    }
    static void setTel(int i,String e){
        tel.set(i, e);
    }
    
    static void removeNome(int i ){
        nome.remove(i);
    }
    
    static void removeCPF(int i ){
        cpf.remove(i);
    }
    
    static void removeData(int i ){
        data.remove(i);
    }
    
    static void removeEmail(int i ){
        email.remove(i);
    }
    
    static void removeTel(int i ){
        tel.remove(i);
    }

